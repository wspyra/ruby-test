<table>

  <tr>
    <th><%=t 'position' %></th>
    <th><%=t 'name' %></th>
    <th><%=t 'visible' %></th>
    <th><%=t 'created' %></th>
    <th><%=t 'updated' %></th>
    <th><%=t 'addons' %></th>
    <th colspan="5"><%=t 'actions' %></th>
  </tr>

    <% @tests.each do |t| %>

        <tr>
          <td class="right"><%= t.position %></td>
          <td><%= t.name %></td>
          <td><%= t.visible ? t('yes_label') : t('no_label') %></td>
          <td><%=l t.created_at %></td>
          <td><%=l t.updated_at %></td>
          <td><%= t.test_addons.size %></td>
          <td><%= link_to(t('show'), {:action => :show, :id => t.id}) %></td>
          <td><%= link_to(t('edit'), {:action => :edit, :id => t.id}) %></td>
          <td><%= link_to(t('delete'), {:action => :destroy, :id => t.id}, :method => 'delete', :confirm => t('are_you_sure')) %></td>
          <td>
            <% unless t.first? -%>
                <%= link_to(t('move_up'), {:move => :up, :id => t.id}) %>
            <% end -%>
          </td>
          <td>
            <% unless t.last? -%>
                <%= link_to(t('move_down'), {:move => :down, :id => t.id}) %>
            <% end -%>
          </td>
        </tr>

    <% end %>

</table>

<%= will_paginate @tests %>

<%= link_to(t('add_new'), :action => :new) %>

