<table>
  <tr>
    <th>Position</th>
    <th>Name</th>
    <th>Visible?</th>
    <th colspan="3">Actions</th>
  </tr>
    <% @tests.each do |t| %>
        <tr>
          <td><%= t.position %></td>
          <td><%= t.name %></td>
          <td><%= t.visible ? 'Yes' : 'No' %></td>
          <td><%= link_to('show', {:action => 'show', :id => t.id}) %></td>
          <td><%= link_to('edit', {:action => 'edit', :id => t.id}) %></td>
          <td><%= link_to('delete', {:action => 'delete', :id => t.id}) %></td>
        </tr>
    <% end %>
</table>
<%= will_paginate @tests %>

